<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/contact_shape">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ImgID"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="ABC"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/ImgID"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:id="@+id/star_container"
        android:layout_toRightOf="@+id/ImgID"
        android:layout_below="@id/username">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_margin="5dp"
            android:id="@+id/star1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_margin="5dp"
            android:id="@+id/star2"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_margin="5dp"
            android:id="@+id/star3"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_margin="5dp"
            android:id="@+id/star4"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_star"
            android:layout_margin="5dp"
            android:id="@+id/star5"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ImgID"
        android:layout_below="@+id/star_container"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:text="adsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlkadsaldjskaldjlk"
        android:id="@+id/txt_feedback"
        android:layout_marginTop="5dp"/>

</RelativeLayout>