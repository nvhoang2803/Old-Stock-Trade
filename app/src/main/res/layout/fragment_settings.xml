<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="10dp"
        android:id="@+id/btn_profile"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentStart="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/avatar"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/logo_color"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/avatar"
            android:id="@+id/UserName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See your profile"
            android:textSize="16sp"
            android:textColor="@color/back_btn"
            android:layout_toRightOf="@+id/avatar"
            android:layout_below="@+id/UserName"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnYourLocation"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_place"
            android:id="@+id/iconLocation"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Location"
            android:textStyle="bold"
            android:textSize="18sp"

            android:layout_toRightOf="@+id/iconLocation"
            android:id="@+id/txtTL"

            />

        <TextView
            android:id="@+id/txtMyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/iconLocation"

            android:layout_below="@+id/txtTL"

            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""

            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPost"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_writing"
            android:id="@+id/iconPost"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post new product"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconPost"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnWishlist"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_wishlist"
            android:id="@+id/iconWishlist"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wishlist"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconWishlist"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnContact"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_phone"
            android:id="@+id/iconContact"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconContact"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSelling"

        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sell"
            android:id="@+id/iconSelling"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconSelling"
        android:text="Selling"

        android:textSize="18sp"
        android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSold"

        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_sold"
            android:id="@+id/iconSold"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sold"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconSold"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBought"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bought"
            android:id="@+id/iconBought"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bought"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconBought"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/brown"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="10dp"
        />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignout"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_logout"
            android:id="@+id/iconLogout"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iconLogout"

            />
    </RelativeLayout>
<!--    <Button-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:id="@+id/btnSignout"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Signout" />-->
<!--    <Button-->
<!--        android:layout_toEndOf="@id/btnSignout"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/btnPost"-->

<!--        android:text="POST"></Button>-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:id="@+id/btnDirection"/>

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btnPost"

        android:text="MAP"></Button>
    <!--    <Button-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Profile"-->
<!--        android:id="@+id/btn_profile"/>-->


</LinearLayout>
</ScrollView>